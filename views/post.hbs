<div class="post">
  {{# if admin }}
    <div id="post-admin">
      <h3>Post Admin:</h3>
      <ul>
        <li><a href="/post/{{ post.slug }}/edit/">📝 Edit Post</a></li>
        <li><button class="delete-post">⛔️ Delete Post</button></li>
      </ul>
    </div>
  {{/ if }}
  <h2 class="post-title"><a href="/post/{{ post.slug }}/">{{ post.title }}</a></h2>
  <h4 class="date">{{ post.formatted_date }}</h4>
  {{# if post.summary }}
    <div class="summary">
      {{{ post.summary }}}
    </div>
    <br>
  {{/ if }}
  <div class="post-body">
    {{{ post.html_body }}}
  </div>
  {{> postStatus }}
  <div id="original-slug">{{ post.slug }}</div>
</div>
