<li class="post">
  <h2 class="post-title">
    <a href="/post/{{ slug }}">
      {{# if title }}
        {{ title }}
      {{/ if }}
    </a>
  </h2>
  <h4 class="date">
    {{ formatted_date }}
  </h4>
  {{# unless title }}
    {{# unless show_read_more }}
      <span class="permalink">
          &nbsp;&nbsp;
          <a href="/post/{{ slug }}">
            link →
          </a>
      </span>
    {{/ unless }}
  {{/ unless }}
  <div class="post-preview">
    {{# if summary }}
      <p class="summary">
        {{ summary }}
      </p>
    {{ else }}
      <p>
        {{ post_preview }}
      </p>
    {{/ if }}
    {{# if show_read_more }}
      <a href="/post/{{ slug }}">
        <p class="read-more">Read More →</p>
      </a>
    {{/ if }}
  </div>
</li>
